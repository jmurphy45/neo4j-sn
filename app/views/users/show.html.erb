<div class="container">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-7">
			<br>
			<h3>My Profile</h3>
			<table class="table table-striped">
				<tbody>
					<tr>
						<td>Name</td>
						<td><%= @user.full_name %></td>
					</tr>
					<tr>
						<td>Email</td>
						<td><%= @user.email %></td>
					</tr>
				</tbody>
			</table>
			<div class="well well-lg">
				<h3>Followings</h3>
				<% if @followings.any? %>
					<ul>
						<% @followings.try(:each) do |follower| %>
							<li>
								<%= User.find(follower.following_id).full_name %>
							</li>
						<% end %>
					</ul>
				<% else %>
					You Have Not Followed Any User
				<% end %>
			</div>	
			<h3>My News Feed</h3>
			  <% @posts.each do |posts| %>
					<%= render 'posts/post', posts: posts %>
		    <% end %>
		</div>
	</div>
</div>